<nav class="header navbar navbar-expand-lg fixed-top navbar-light bg-red">
  <div class="container">
    <a href="#" class="navbar-brand">Shiori</a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a href="#" class="nav-link">Animes</a>
        </li>
        <li class="nav-item">
          <a href="#" class="nav-link">Groups</a>
        </li>
      </ul>

      <form class="search form-inline my-2 my-lg-0 {{if isActive 'active'}}">
        <input class="form-control" type="search" placeholder="Search"
          {{action 'toggleActive' on='focusIn'}} {{action 'toggleActive' on='focusOut'}}>
        <button class="btn" type="submit">{{fa-icon 'search'}}</button>
      </form>

      {{#if session.isAuthenticated}}
        <ul class="navbar-nav float-right">
          <li class="nav-item">
            {{#bs-dropdown as |dd|}}
              {{#dd.toggle class='nav-link'}}
                {{user.name}} <span class="caret"></span>
              {{/dd.toggle}}
              {{#dd.menu align='right' as |mn|}}
                {{#mn.item}}
                  {{#mn.link-to 'no-auth.signin'}}{{t 'settings'}}{{/mn.link-to}}
                {{/mn.item}}
                {{mn.divider}}
                {{#mn.item}}
                  <a href="#" class="dropdown-item" {{action 'signout'}}>{{t 'signout'}}</a>
                {{/mn.item}}
              {{/dd.menu}}
            {{/bs-dropdown}}
          </li>
        </ul>
      {{else}}
        <ul class="navbar-nav float-right">
          <li class="nav-item">
            {{#link-to 'no-auth.signin' class='nav-link'}}{{t 'signin'}}{{/link-to}}
          </li>
          <li class="nav-item">
            {{#link-to 'no-auth.signup' class='nav-link'}}{{t 'signup'}}{{/link-to}}
          </li>
        </ul>
      {{/if}}
    </div>
  </div>
</nav>
